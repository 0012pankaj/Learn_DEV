<% layout('layouts/boilerpalte') -%> 
<!-- to insert this page in main part of boilerpaltewhere body tag inserted  -->
<nav class="mb-5">
  <%- include('../partials/navebar') -%>
</nav>

<div class="row">
  <div class="col-md-6 mx-auto my-5">
   
    <form action="/products" method="POST">
        <div class="mb-3">
          <label for="name" class="form-label">NAME:</label>
          <input type="text" class="form-control" id="name" name="name" >
         
        </div>
        <div class="mb-3">
          <label for="img" class="form-label">IMAGE:</label>
          <input type="text" class="form-control" id="image"  name="img">
        </div>
        <div class="mb-3">
            <label class="form-label" for="dec">Description:</label>
            <textarea class="form-control" name="dec" id="dec" rows="5"></textarea>
          </div>
          <div class="input-group mb-3">
            <label for="price" class="form-label">Price:</label>
            <span class="input-group-text" id="price">$</span>
            <input type="text" class="form-control" name="price" placeholder="Price" >
          </div>
        
        <button type="submit" class="btn btn-success">ADD+</button>
      </form>
  </div>
</div>
