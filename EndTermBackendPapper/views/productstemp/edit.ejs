<h1 mt-5 mb-5>EDIT PAGE</h1>
<div class="row">
    <div class="col-md-6 mx-auto my-5">
                  <!-- //use form for method overide and post request update/patch -->
                  
      <form action="/standup/<%=product.id%>?_method=PATCH" method="POST" class="needs-validation" novalidate>
           
        <div class="mb-3">
          <label for="comedianName" class="form-label">comedianName:</label>
          <input type="text" class="form-control" id="comedianName" name="comedianName" value="<%=product.comedianName%>" required >  
          <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Please fill!
          </div>       
        </div>


        <div class="mb-3">
          <label for="totalShows" class="form-label">totalShows:</label>
          <input type="text" class="form-control" id="totalShows" name="totalShows"  value="<%=product.totalShows%>" required> 
          <div class="valid-feedback">
            Looks good!
          </div>  
          <div class="invalid-feedback">
            Please fill!
          </div>      
        </div>

          <button type="submit" class="btn btn-success">Update +</button>
        </form>
    </div>
  </div>

  <script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
  (function () {
    'use strict'
  
    // Fetch all the forms we want to apply custom Bootstrap validation styles to
    var forms = document.querySelectorAll('.needs-validation')
  
    // Loop over them and prevent submission
    Array.prototype.slice.call(forms)
      .forEach(function (form) {
        form.addEventListener('submit', function (event) {
          if (!form.checkValidity()) {
            event.preventDefault()
            event.stopPropagation()
          }
  
          form.classList.add('was-validated')
        }, false)
      })
  })()
  </script>
  
  